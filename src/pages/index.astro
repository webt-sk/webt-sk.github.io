        class="[&_button]:text-inactive flex flex-col gap-2 md:gap-4 xl:gap-6 [&_button]:mb-4 [&_button]:cursor-pointer [&_button]:text-3xl [&_button]:font-bold [&_button]:transition-colors [&_button]:hover:text-white [&_button]:sm:text-4xl [&_button]:lg:text-4xl [&_button]:xl:text-5xl"
