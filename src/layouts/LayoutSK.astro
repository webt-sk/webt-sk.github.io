---
import Layout from "../layouts/Layout.astro";

export interface Props {
  headerPosition?: "fixed" | "sticky";
  title: string;
  description: string;
}

const props = Astro.props;
---

<Layout
  description={props.description}
  title={props.title}
  lang="sk"
  headerPosition={props.headerPosition}
  links={[
    {
      name: "Úvod",
      href: "/",
      prefetch: true,
    },
    {
      name: "Kto sme",
      href: "/kto-sme",
      prefetch: true,
    },
    {
      name: "Projekty",
      href: "/projekty",
      prefetch: true,
    },
    {
      name: "Kontakty",
      href: "/kontakty",
      prefetch: true,
    },
    {
      name: "EN",
      href: "/en",
    },
  ]}
>
  <slot />
  <Fragment slot="meta">
    <meta property="og:title" content="webTool" />
    <meta
      property="og:description"
      content="Digitálna agentúra, ktorá vás ukáže svetu prostredníctvom webu."
    />
    <meta property="og:image" content="/link.svg" />
  </Fragment>
</Layout>
