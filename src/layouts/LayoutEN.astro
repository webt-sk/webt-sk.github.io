---
import Layout from "../layouts/Layout.astro";
export interface Props {
  headerPosition?: "fixed" | "sticky";
  title: string;
  description: string;
}

const props = Astro.props;
---

<Layout
  description={props.description}
  title={props.title}
  lang="en"
  headerPosition={props.headerPosition}
  links={[
    {
      name: "Home",
      href: "/en",
      prefetch: true,
    },
    {
      name: "About us",
      href: "/en/about-us",
      prefetch: true,
    },
    {
      name: "Projects",
      href: "/en/projects",
      prefetch: true,
    },
    {
      name: "Contacts",
      href: "/en/contacts",
      prefetch: true,
    },
    {
      name: "SK",
      href: "/",
    },
  ]}
>
  <slot />
  <!-- TODO:  -->
  <Fragment slot="meta">
    <meta property="og:title" content="webT" />
    <meta property="og:description" content="webT" />
    <meta property="og:image" content="" />
  </Fragment>
</Layout>
