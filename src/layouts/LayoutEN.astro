---
import Layout from "../layouts/Layout.astro";
export interface Props {
  headerPosition?: "fixed" | "sticky";
  title: string;
  description: string;
}

const props = Astro.props;
---

<Layout
  description={props.description}
  title={props.title}
  lang="en"
  headerPosition={props.headerPosition}
  links={[
    {
      name: "Home",
      href: "/en",
      prefetch: true,
    },
    {
      name: "Projects",
      href: "/en/projects",
      prefetch: true,
    },
    {
      name: "Contacts",
      href: "/en/contacts",
      prefetch: true,
    },
    {
      name: "SK",
      href: "/",
    },
  ]}
>
  <slot />
  <Fragment slot="meta">
    <meta property="og:title" content="webTool" />
    <meta
      property="og:description"
      content="Digital agency that will show you to the world through the web."
    />
    <meta property="og:image" content="/link-en.svg" />
  </Fragment>
</Layout>
